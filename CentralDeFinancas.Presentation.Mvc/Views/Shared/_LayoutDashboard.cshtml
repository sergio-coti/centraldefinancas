@using Newtonsoft.Json
@using CentralDeFinancas.Presentation.Mvc.Controllers
@{
    //ler os dados gravados no cookie de autenticação
    var auth = User.Identity.Name;
    var user = JsonConvert.DeserializeObject<AccountModel>(auth);
}

<html>
<head>
    <title>@ViewBag.Titulo</title>
    <meta name="viewport" content="width=device-width" />

    <!-- CDN Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" />

</head>
<body>

    <nav class="navbar navbar-expand-lg bg-body-tertiary">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">Central de Finanças</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="/Dashboard/Index">Dashboard</a>
                    </li>
                </ul>

                <div class="d-flex">
                    <div>
                        <div>
                            <strong>@user.Nome</strong>
                        </div>
                        <div class="margin-top: -20px!important;">
                            <small>@user.Email</small>
                        </div>
                    </div>
                    &nbsp;&nbsp;&nbsp;
                    <div>
                        <a href="/Account/Logout" class="btn btn-light" style="border: 1px solid #ccc;"
                           onclick="return confirm('Deseja realmente sair do sistema?');">
                            Sair do Sistema
                        </a>
                    </div>
                </div>

            </div>
        </div>
    </nav>

    <div class="container">
        <div class="card mt-3">
            <div class="card-body">
                @RenderBody()
            </div>
        </div>
    </div>

    <!-- CDN Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>

    <!-- seção para incluir conteudo javascript -->
    @RenderSection("scripts", required: false)

</body>
</html>