@model CentralDeFinancas.Presentation.Mvc.Models.LoginViewModel
@{
    ViewBag.Titulo = "Autenticação de usuários";
}

<div class="text-center">
    <h4>Central de Finanças</h4>
    <p>Acesse sua conta de usuário</p>
    
    <div>
        <strong>@TempData["Mensagem"]</strong>
    </div>
</div>

<hr/>

@using(Html.BeginForm())
{
    <div class="mb-2">
        <label>Email de acesso:</label>
        @Html.TextBoxFor(model => model.Email, 
            new 
            {
                @class = "form-control",
                @placeholder = "Ex: joaocarlos@gmail.com"
            })
        <span class="text-danger">
            @Html.ValidationMessageFor(model => model.Email)
        </span>
    </div>

    <div class="mb-2">
        <label>Senha de acesso:</label>
        @Html.PasswordFor(model => model.Senha,
            new
            {
                @class = "form-control",
                @placeholder = "Digite aqui"
            })
        <span class="text-danger">
            @Html.ValidationMessageFor(model => model.Senha)
        </span>
    </div>

    <div class="mb-2 d-grid">
        <input type="submit" class="btn btn-primary" value="Acessar Sistema"/>
    </div>

    <div class="mb-2 d-grid">
        <a href="/Account/Register" class="btn btn-light">
            Não possui conta? <strong>Cadastre-se aqui!</strong>    
        </a>
    </div>
}