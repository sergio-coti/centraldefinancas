@model CentralDeFinancas.Presentation.Mvc.Models.RegisterViewModel
@{
    ViewBag.Titulo = "Criação de conta de usuários";
}

<div class="text-center">
    <h4>Central de Finanças</h4>
    <p>Cria sua conta de usuário</p>

    <div>
        <strong>@TempData["Mensagem"]</strong>
    </div>
</div>

<hr />

@using (Html.BeginForm())
{
    <div class="mb-2">
        <label>Nome do usuário:</label>
        @Html.TextBoxFor(model => model.Nome,
    new
    {
    @class = "form-control",
    @placeholder = "Ex: João Carlos"
    })
        <span class="text-danger">
            @Html.ValidationMessageFor(model => model.Nome)
        </span>
    </div>

    <div class="mb-2">
        <label>Email de acesso:</label>
        @Html.TextBoxFor(model => model.Email,
    new
    {
    @class = "form-control",
    @placeholder = "Ex: joaocarlos@gmail.com"
    })
        <span class="text-danger">
            @Html.ValidationMessageFor(model => model.Email)
        </span>
    </div>

    <div class="mb-2">
        <label>Senha de acesso:</label>
        @Html.PasswordFor(model => model.Senha,
    new
    {
    @class = "form-control",
    @placeholder = "Digite aqui"
    })
        <span class="text-danger">
            @Html.ValidationMessageFor(model => model.Senha)
        </span>
    </div>

    <div class="mb-2">
        <label>Confirme sua senha:</label>
        @Html.PasswordFor(model => model.SenhaConfirmacao,
    new
    {
    @class = "form-control",
    @placeholder = "Digite aqui"
    })
        <span class="text-danger">
            @Html.ValidationMessageFor(model => model.SenhaConfirmacao)
        </span>
    </div>

    <div class="mb-2 d-grid">
        <input type="submit" class="btn btn-primary" value="Realizar Cadastro" />
    </div>

    <div class="mb-2 d-grid">
        <a href="/Account/Login" class="btn btn-light">
            Já possui conta? <strong>Acesse aqui!</strong>
        </a>
    </div>
}